{
    "include": [
        "packages/*/src"
    ],
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "baseUrl": ".",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "paths": {
            "@ccss-support-manual/*": [
                "packages/*/src"
            ]
        },
        "target": "es6",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    }
}