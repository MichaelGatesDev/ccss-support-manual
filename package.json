        "@typescript-eslint/parser": "^1.12.0",
        "eslint": "^6.0.1",
        "jest": "^24.8.0",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.3"
    }
