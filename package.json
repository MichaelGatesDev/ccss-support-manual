{
    "name": "classroom-support-manual",
    "private": true,
    "version": "1.3.27",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "start:backend": "yarn workspace @ccss-support-manual/backend run dev",
        "start:frontend": "yarn workspace @ccss-support-manual/frontend run start",
        "tsc": "lerna run tsc",
        "clean": "tsnd scripts/clean.ts",
        "purge": "lerna clean",
        "lint": "eslint . --ext .js,.ts",
        "lint-fix": "eslint . --ext .js,.ts --fix",
        "postinstall": "lerna bootstrap && yarn tsc && lerna link",
        "test": "lerna run test --concurrency 1",
        "build": "tsnd scripts/build.ts --target=all --system=pkg"
    },
    "devDependencies": {
        "@types/jest": "^25.1.2",
        "@types/node": "^13.7.1",
        "@types/rimraf": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "eslint": "^6.8.0",
        "jest": "^25.1.0",
        "lerna": "^3.20.2",
        "nexe": "^3.3.2",
        "pkg": "^4.4.3",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.2.0",
        "ts-node": "^8.5.4",
        "ts-node-dev": "^1.0.0-pre.44",
        "tsconfig-paths": "^3.9.0",
        "tslib": "^1.9.3",
        "typescript": "^3.7.5"
    },
    "resolutions": {
        "typescript": "^3.7.5"
    }
}
