{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "module": "esnext",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "composite": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "__tests__/**/*",
    "__mocks__/**/*"
  ]
}