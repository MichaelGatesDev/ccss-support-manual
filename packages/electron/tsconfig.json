{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "composite": false,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "removeComments": true,
    "target": "es6",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/public/"],
  "references": [
    {
      "path": "../backend/tsconfig.build.json"
    }
  ]
}
