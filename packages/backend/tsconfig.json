{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "lib": [
      "es6",
      "dom",
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "__tests__/**/*",
    "__mocks__/**/*"
  ]
}