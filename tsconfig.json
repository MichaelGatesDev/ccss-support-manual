{
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        "__tests__",
        "**/*.test*",
        "**/*.spec*"
    ],
    "files": [],
    "compilerOptions": {
        "skipLibCheck": false,
        "target": "esnext",
        "module": "esnext",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "rootDir": ".",
        "outDir": "build",
        "downlevelIteration": true,
        "strict": true,
        "removeComments": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@ccss-support-manual/*": [
                "packages/*/src"
            ]
        },
        "composite": true
    },
    "references": [
        {
            "path": "packages/common"
        }
    ]
}